enum Role {
  ADMIN
  ADMIN_TEST
  CLIENT
  USER
}

type User {
  id: ID! @unique
  role: Role! @default(value: "USER")
  name: String
  email: String! @unique
  password: String!
  createdAt: DateTime!
  updatedAt: DateTime!
  links: [Link!]!
  votes: [Vote!]!
}

type Link {
  id: ID! @unique
  createdAt: DateTime!
  description: String!
  url: String!
  postedBy: User
  votes: [Vote!]!
}

type Vote {
  id: ID! @unique
  link: Link!
  user: User!
}
